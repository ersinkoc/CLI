{
  "name": "@oxog/cli",
  "version": "2.0.1",
  "description": "Type-safe CLI framework with @oxog ecosystem integration, plugin architecture, and beautiful output",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./plugins": {
      "import": {
        "types": "./dist/plugins/index.d.ts",
        "default": "./dist/plugins/index.js"
      },
      "require": {
        "types": "./dist/plugins/index.d.cts",
        "default": "./dist/plugins/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:coverage",
    "release": "npm run build && npm publish",
    "release:dry": "npm run build && npm publish --dry-run"
  },
  "keywords": [
    "cli",
    "command-line",
    "commander",
    "args",
    "parser",
    "terminal",
    "prompt",
    "interactive",
    "typescript",
    "plugin",
    "micro-kernel",
    "oxog",
    "oxog-ecosystem",
    "event-emitter"
  ],
  "author": "Ersin KoÃ§",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ersinkoc/cli.git"
  },
  "bugs": {
    "url": "https://github.com/ersinkoc/cli/issues"
  },
  "homepage": "https://cli.oxog.dev",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@oxog/emitter": "^1.0.0",
    "@oxog/pigment": "^1.0.1",
    "@oxog/plugin": "^1.0.1",
    "@oxog/types": "^1.0.1",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@oxog/emitter": "^1.0.0",
    "@oxog/pigment": "^1.0.0",
    "@oxog/plugin": "^1.0.1",
    "@oxog/types": "^1.0.1"
  }
}
